#!/bin/bash
#

pushd "$DOTFILES/vscode" || exit 1

file="install_extensions.sh"

cat <<EOT > "$file"
#!/bin/bash
#
# Script generated by $0. DO NOT EDIT.
#
# $(date)
#

EOT

content=$(code --list-extensions | xargs -L 1 echo code --install-extension)
echo "$content" >> "$file"

git diff "$file"

popd || exit 1
